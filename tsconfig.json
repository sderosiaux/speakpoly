{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./web/*"],
      "@speakpoly/database": ["./packages/database"],
      "@speakpoly/ui": ["./packages/ui"],
      "@speakpoly/types": ["./packages/types"],
      "@speakpoly/utils": ["./packages/utils"],
      "@speakpoly/config": ["./packages/config"]
    }
  },
  "include": [
    "web/**/*",
    "packages/**/*",
    "services/**/*"
  ],
  "exclude": ["node_modules"]
}